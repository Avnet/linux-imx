/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include "../imx93-pinfunc.h"

/* Device tree overlay for MIPI LCD (Old LCD screen-ver0.1) */

&dsi{
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	panel@0 {
		compatible = "avnet,ph720128t003", "ilitek,ili9881c";
		reg = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_mipi_dsi_en>;
		pwn-gpios = <&gpio2 24 GPIO_ACTIVE_HIGH>;
		dsi-lanes = <2>;
		backlight = <&backlight>;

		port {
			panel_in: endpoint {
				remote-endpoint = <&mipi_dsi_out>;
			};
		};

	};

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@1 {
			reg = <1>;
			mipi_dsi_out: endpoint {
			remote-endpoint = <&panel_in>;
			};
		};
	};
};

&dphy {
	status = "okay";
};

&lcdif {
	status = "okay";
};

&micfil {
	status = "okay";
};

&iomuxc {
	pinctrl_mipi_dsi_en: mipi_dsi_en {
		fsl,pins = <
			MX93_PAD_GPIO_IO24__GPIO2_IO24      0x11e  /* DSI_EN */
		>;
	};
};

/* For Avnet PH720128T003 LCD display touchscreen */
&ft5426{
	status = "okay";
};

/* For Avnet PH720128T005 LCD display touchscreen */
&gt911{
	status = "disabled";
};