#include "maaxboard.dtsi"
#include "maaxboard-extended-gpio.dtsi"

/ {
	display-subsystem {
		status = "disabled";
	};
	sound-hdmi {
		status = "disabled";
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm1 0 40000 0>;
		brightness-levels = <0 8 32 64 96 128 160 192 224 255>;
		default-brightness-level = <8>;
		status = "disabled";
	};
};

&irqsteer_dcss {
	status = "disabled";
};

&dcss {
	status = "disabled";
};

&hdmi {
	status = "disabled";
};

&iomuxc {
	imx8mq-evk {
		pinctrl_mipi_dsi_en: mipi_dsi_en {
			fsl,pins = <
				MX8MQ_IOMUXC_NAND_DATA06_GPIO3_IO12		0x16  /* DSI_EN */
			>;
		};

		pinctrl_ts_ft5426: ft5426_pinsgrp {
			fsl,pins = <
				MX8MQ_IOMUXC_NAND_DATA07_GPIO3_IO13		0x19  /* DSI_TS_nINT */
				MX8MQ_IOMUXC_GPIO1_IO04_GPIO1_IO4		0x19  /* DSI_TS_RST  */
			>;
		};

		pinctrl_pwm1: pwm1_grp {
			fsl,pins = <
				MX8MQ_IOMUXC_GPIO1_IO01_PWM1_OUT		0x06
			>;
		};
	};
};

&lcdif {
	status = "okay";
	max-res = <1024>, <600>;

	assigned-clocks = <&clk IMX8MQ_CLK_LCDIF_PIXEL>,
	 		<&clk IMX8MQ_VIDEO_PLL1_BYPASS>,
			  <&clk IMX8MQ_VIDEO_PLL1_REF_SEL>,
			  <&clk IMX8MQ_VIDEO_PLL1>;
	assigned-clock-parents = <&clk IMX8MQ_VIDEO_PLL1_OUT>,
				 <&clk IMX8MQ_CLK_25M>;
	assigned-clock-rates = <266000000>,
			       <0>,
			       <599999999>;
	
	port@0 {
		lcdif_mipi_dsi: mipi-dsi-endpoint {
			remote-endpoint = <&mipi_dsi_in>;
		};
	};
};

&mipi_dsi_phy {
	status = "okay";
};

&mipi_dsi {
	status = "okay";
	as_bridge;
	sync-pol = <1>;
	pwr-delay = <10>;
	
	assigned-clocks = <&clk IMX8MQ_CLK_DSI_PHY_REF>,
			  <&clk IMX8MQ_CLK_DSI_CORE>,
			  <&clk IMX8MQ_VIDEO_PLL1_REF_SEL>,
			  <&clk IMX8MQ_VIDEO_PLL1>;
	assigned-clock-parents = <&clk IMX8MQ_VIDEO_PLL1_OUT>,
				 <&clk IMX8MQ_SYS1_PLL_266M>,
				 <&clk IMX8MQ_CLK_25M>;
	assigned-clock-rates = <24000000>,
			       <266000000>,
			       <0>,
			       <599999999>;

	port@1 {
		mipi_dsi_in: endpoint {
			remote-endpoint = <&lcdif_mipi_dsi>;
		};
	};
};

&mipi_dsi_bridge{
    status = "okay";
	clock-drop-level = <2>;

	port@1 {
		mipi_dsi_bridge_out: endpoint {
			remote-endpoint = <&lt2911_in>;
		};
	};
};

&pwm1 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_pwm1>;
		status = "okay";
};

&i2c4 {
	status = "okay";

	ft5426: ft5426_ts@38 {
		compatible = "focaltech,fts";
		reg = <0x38>;
		pinctrl-0 = <&pinctrl_ts_ft5426>;

		interrupt-parent = <&gpio3>;
		interrupts = <13 2>;
		focaltech,reset-gpio = <&gpio1 4 0x01>;
		focaltech,irq-gpio = <&gpio3 13 0x02>;
		focaltech,max-touch-number = <10>;
		focaltech,panel-type = <0x54260002>; /* _FT5426 */
		focaltech,have-key;
		focaltech,key-number = <3>;
		focaltech,keys = <139 102 158>;
		focaltech,key-y-coord = <2000>;
		focaltech,key-x-coords = <200 600 800>;
		status = "disabled";
	};

    dsi_lvds_bridge:lt2911@29 {
		compatible = "lontium,lt2911";
		reg = <0x29>;
		pinctrl-0 = <&pinctrl_mipi_dsi_en>;
		enable-gpio = <&gpio3 12 GPIO_ACTIVE_HIGH>;		
		dsi-lanes = <4>;
		status = "disabled";

		port {
			lt2911_in: endpoint {
				remote-endpoint = <&mipi_dsi_bridge_out>;
			};
		};

		display-timings {
			native-mode = <&timing1>;
			timing1: timing1 {
				clock-frequency = <36000000>;
				hactive = <1024>;
				vactive = <600>;
				hfront-porch = <60>;
				hsync-len = <60>;
				hback-porch = <100>;
				vfront-porch = <2>;
				vsync-len = <5>;
				vback-porch = <10>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <0>;
				pixelclk-active = <0>;
			};
		};
	};
};

&backlight {
	status = "okay";
};

&ft5426 {
	status = "okay";

	focaltech,max-touch-number = <5>;
	focaltech,display-coords =  <0 0 1024 600>;
};

&dsi_lvds_bridge {
	status = "okay";
};
